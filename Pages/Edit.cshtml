<form id="edit-form" action="/Edit" method="post">
    <input type="hidden" id="movie-id" name="Id" value="@Model.Movie.Id">

    <label for="title">Название</label>
    <input type="text" id="title" name="Title" value="@Model.Movie.Title">

    <label for="director">Режиссер</label>
    <input type="text" id="director" name="Director" value="@Model.Movie.Director">

    <label for="genre">Стиль</label>
    <input type="text" id="genre" name="Genre" value="@Model.Movie.Genre">

    <label for="description">Описание</label>
    <textarea id="description" name="Description" value="@Model.Movie.Description"></textarea>

    <label for="sessions">Сеансы (через запятую)</label>
    <input type="text" id="sessions" name="Sessions" value="@Model.Movie.Sessions">

    <button type="submit">Сохранить</button>
    <button type="button" class="cancel" onclick="window.location.href='/';">Отмена</button>
</form>

<script>
    // Устанавливаем значения в форме
    const urlParams = new URLSearchParams(window.location.search);
    document.getElementById('movie-id').value = urlParams.get('id');
    document.getElementById('title').value = urlParams.get('title');
    document.getElementById('director').value = urlParams.get('director');
    document.getElementById('genre').value = urlParams.get('genre');
    document.getElementById('description').value = urlParams.get('description');
    document.getElementById('sessions').value = urlParams.get('sessions');
</script>